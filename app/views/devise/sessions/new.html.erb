<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mx-auto max-w-sm bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: 'text-gray-700 text-sm mb-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: 'text-gray-700 text-sm mb-2' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'text-gray-700 text-sm mb-2' %>
    </div>
  <% end %>

  <div class="actions mb-4">
    <%= f.submit "Sign in", class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-2", data: { disable_with: "Processing..." } %>
  </div>

  <div class="mb-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
